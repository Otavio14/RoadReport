<?xml version="1.0" encoding="utf-8"?>
<!-- Estilo para os EditText com apenas bordas inferiores -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/input"
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/orange" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>

